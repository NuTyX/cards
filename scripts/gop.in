source /etc/pkgmk.conf
info() {
	echo "=======> $1"
}
warning() {
	info "WARNING: $1" >&2
}
error() {
	info "ERROR: $1" >&2
}
error_commit(){
	error "Something wrong with the commit"
	exit 1
}
get_basename() {
	local FILE="`echo $1 | sed 's|^.*://.*/||g'`"
	echo $FILE
}
	

if [ $# -lt 1 ]; then
        echo 1>&2
        echo 1>&2 'Usage: gop <portfolder> (gop kde@4.1.2 for example)'
        echo 1>&2
        exit 1
fi
# Various checks
if [ ! "`type -p git`" ]; then
	error "Command 'git' not found."
	exit
fi
if [ ! "`type -p pkgmk`" ]; then
	error "Command 'pkgmk' not found."
	exit
fi
if [ ! -f .gitignore ]; then
	error "File .gitignore not found."
	exit 1
fi
if [ ! -d `get_basename $1` ]; then
	error "$1 is not a directory."
	exit 1
fi
name=`get_basename $1|cut -d "@" -f1`
name=`basename $name`
version=`get_basename $1|cut -d "@" -f2`

if  [ ! -f "$1/$name.info" ]; then
	error "$1.info file is missing."
	exit 1
fi

# If we arrive here, we can do the job
cd $1
rm -f ~*
pkgmk -co
cd -
git add $1 || error_commit
if  [ $# -eq 2 ]; then
	git commit -m "$name $version, $2" || error_commit
fi

# End of file
